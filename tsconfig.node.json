{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "types/*": ["types/*"]
    },
    "noEmit": true,
    "types": ["node"],
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["pages/api/**/*", "types/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", "client"]
} 